{
  "name": "genecooper-claude-code-chatui",
  "displayName": "Claude Code Chat UI",
  "description": "A GUI wrapper for Claude Code CLI inside VS Code",
  "version": "0.8.12",
  "publisher": "GeneCooper",
  "license": "MIT",
  "icon": "media/icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/GeneCooper/claude-code-chatui"
  },
  "keywords": [
    "claude",
    "ai",
    "chat",
    "coding-assistant",
    "claude-code"
  ],
  "engines": {
    "vscode": "^1.100.0"
  },
  "categories": [
    "AI",
    "Chat"
  ],
  "activationEvents": [
    "onStartupFinished",
    "onWebviewPanel:claudeCodeChatUI"
  ],
  "main": "./out/extension/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "claude-code-chatui.openChat",
        "title": "Open Claude Code ChatUI",
        "category": "Claude Code ChatUI",
        "icon": "media/icon.png"
      },
      {
        "command": "claude-code-chatui.openChatWithFile",
        "title": "Chat with this file",
        "category": "Claude Code ChatUI",
        "icon": "media/icon.png"
      }
    ],
    "keybindings": [
      {
        "command": "claude-code-chatui.openChat",
        "key": "ctrl+shift+c",
        "mac": "cmd+shift+c"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "claude-code-chatui",
          "title": "Claude Code ChatUI",
          "icon": "media/icon.png"
        }
      ]
    },
    "views": {
      "claude-code-chatui": [
        {
          "type": "webview",
          "id": "claude-code-chatui.chatView",
          "name": "Chat",
          "icon": "media/icon.png"
        }
      ]
    },
    "menus": {
      "commandPalette": [
        {
          "command": "claude-code-chatui.openChat"
        },
        {
          "command": "claude-code-chatui.openChatWithFile"
        }
      ],
      "editor/title": [
        {
          "command": "claude-code-chatui.openChatWithFile",
          "group": "navigation@1",
          "when": "true"
        }
      ],
      "editor/context": [
        {
          "command": "claude-code-chatui.openChatWithFile",
          "group": "claude@1",
          "when": "editorTextFocus"
        }
      ],
      "explorer/context": [
        {
          "command": "claude-code-chatui.openChatWithFile",
          "group": "claude@1"
        }
      ]
    },
    "configuration": {
      "title": "Claude Code ChatUI",
      "properties": {
        "claudeCodeChatUI.thinking.intensity": {
          "type": "string",
          "enum": [
            "fast",
            "deep",
            "precise"
          ],
          "default": "fast",
          "description": "Agent mode: fast (minimal tokens), deep (structured workflow), or precise (anti-hallucination)"
        },
        "claudeCodeChatUI.permissions.yoloMode": {
          "type": "boolean",
          "default": true,
          "description": "Skip all permission checks (use with caution)"
        },
        "claudeCodeChatUI.notifications.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Show a desktop notification when Claude finishes processing (only when the panel is not visible)"
        },
        "claudeCodeChatUI.maxTurns": {
          "type": "number",
          "default": 0,
          "minimum": 0,
          "maximum": 100,
          "description": "Maximum number of agentic turns per request (0 = unlimited). Helps control token usage."
        },
        "claudeCodeChatUI.disallowedTools": {
          "type": "array",
          "items": { "type": "string" },
          "default": [],
          "description": "List of tool names to block (e.g. Bash, Write). Passed as --disallowedTools to CLI."
        },
        "claudeCodeChatUI.projectProfile.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Auto-detect project type (language, framework, tools) and inject best-practice prompts into system instructions"
        },
        "claudeCodeChatUI.intentAnalysis.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Analyze user message intent and generate MCP/tool usage hints to guide Claude toward the right tools"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile && npm run build:webview",
    "compile": "tsc -p tsconfig.extension.json",
    "watch": "tsc -watch -p tsconfig.extension.json",
    "build:webview": "vite build",
    "dev:webview": "vite dev",
    "package": "vsce package",
    "lint": "eslint src/"
  },
  "dependencies": {
    "katex": "^0.16.28",
    "mermaid": "^11.12.2",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-markdown": "^10.1.0",
    "react-syntax-highlighter": "^16.1.0",
    "rehype-katex": "^7.0.1",
    "remark-gfm": "^4.0.1",
    "remark-math": "^6.0.0",
    "zustand": "^5.0.11"
  },
  "devDependencies": {
    "@tailwindcss/vite": "^4.1.18",
    "@types/node": "^25.2.2",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@types/react-syntax-highlighter": "^15.5.13",
    "@types/vscode": "^1.100.0",
    "@vitejs/plugin-react": "^5.1.1",
    "@vscode/vsce": "^3.7.1",
    "autoprefixer": "^10.4.24",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.18",
    "typescript": "^5.9.3",
    "vite": "^7.3.1"
  }
}
