{
  "name": "claude-code-chatui",
  "displayName": "Claude Code Chat UI",
  "description": "A GUI wrapper for Claude Code CLI inside VS Code",
  "version": "0.1.0",
  "publisher": "GeneCooper",
  "license": "MIT",
  "engines": {
    "vscode": "^1.109.0"
  },
  "categories": ["Other"],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "claude-code-chatui.openChat",
        "title": "Open Claude Code ChatUI",
        "category": "Claude Code ChatUI",
        "icon": "media/icon.png"
      }
    ],
    "keybindings": [
      {
        "command": "claude-code-chatui.openChat",
        "key": "ctrl+shift+c",
        "mac": "cmd+shift+c"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "claude-code-chatui",
          "title": "Claude Code ChatUI",
          "icon": "media/icon.png"
        }
      ]
    },
    "views": {
      "claude-code-chatui": [
        {
          "type": "webview",
          "id": "claude-code-chatui.chatView",
          "name": "Chat",
          "icon": "media/icon.png"
        }
      ]
    },
    "menus": {
      "commandPalette": [
        { "command": "claude-code-chatui.openChat" }
      ],
      "editor/context": [
        {
          "command": "claude-code-chatui.openChat",
          "group": "claude@1",
          "when": "editorTextFocus"
        }
      ]
    },
    "configuration": {
      "title": "Claude Code ChatUI",
      "properties": {
        "claudeCodeChatUI.thinking.intensity": {
          "type": "string",
          "enum": ["think", "think-hard", "think-harder", "ultrathink"],
          "default": "think",
          "description": "Thinking mode intensity level"
        },
        "claudeCodeChatUI.permissions.yoloMode": {
          "type": "boolean",
          "default": false,
          "description": "Skip all permission checks (use with caution)"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile && npm run build:webview",
    "compile": "tsc -p tsconfig.json",
    "watch": "tsc -watch -p tsconfig.json",
    "build:webview": "cd webview-ui && npm run build",
    "dev:webview": "cd webview-ui && npm run dev",
    "package": "vsce package",
    "lint": "eslint src/"
  },
  "devDependencies": {
    "@types/node": "^25.2.2",
    "@types/vscode": "^1.109.0",
    "@vscode/vsce": "^3.7.1",
    "typescript": "^5.9.3"
  }
}
