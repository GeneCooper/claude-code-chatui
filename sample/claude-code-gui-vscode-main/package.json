{
    "name": "claude-code-gui",
    "displayName": "Claude Code GUI",
    "description": "Modern AI-Powered GUI Interface for Claude Code CLI",
    "version": "1.5.12",
    "publisher": "MaheshKok",
    "author": "Mahesh Kokare",
    "repository": {
        "type": "git",
        "url": "https://github.com/MaheshKok/claude-code-gui-vscode"
    },
    "license": "MIT",
    "engines": {
        "vscode": "^1.94.0",
        "node": "22.21.1"
    },
    "categories": [
        "AI",
        "Chat",
        "Machine Learning",
        "Programming Languages",
        "Other"
    ],
    "keywords": [
        "claude",
        "claude-code",
        "ai",
        "gui",
        "anthropic",
        "code-assistant",
        "copilot",
        "llm",
        "cli",
        "productivity"
    ],
    "icon": "assets/logo.png",
    "main": "./dist/extension.js",
    "activationEvents": [
        "onStartupFinished"
    ],
    "contributes": {
        "commands": [
            {
                "command": "claude-code-gui.openChat",
                "title": "Open Claude Code GUI",
                "category": "Claude Code",
                "icon": {
                    "light": "assets/icons/chat-light.svg",
                    "dark": "assets/icons/chat-dark.svg"
                }
            },
            {
                "command": "claude-code-gui.newConversation",
                "title": "New Conversation",
                "category": "Claude Code",
                "icon": "$(add)"
            },
            {
                "command": "claude-code-gui.clearHistory",
                "title": "Clear Chat History",
                "category": "Claude Code",
                "icon": "$(trash)"
            },
            {
                "command": "claude-code-gui.exportChat",
                "title": "Export Chat",
                "category": "Claude Code",
                "icon": "$(export)"
            },
            {
                "command": "claude-code-gui.toggleThinkingMode",
                "title": "Toggle Thinking Mode",
                "category": "Claude Code",
                "icon": "$(lightbulb)"
            },
            {
                "command": "claude-code-gui.sendSelection",
                "title": "Send Selection to Claude",
                "category": "Claude Code"
            },
            {
                "command": "claude-code-gui.explainCode",
                "title": "Explain Code with Claude",
                "category": "Claude Code"
            },
            {
                "command": "claude-code-gui.refactorCode",
                "title": "Refactor Code with Claude",
                "category": "Claude Code"
            },
            {
                "command": "claude-code-gui.generateTests",
                "title": "Generate Tests with Claude",
                "category": "Claude Code"
            },
            {
                "command": "claude-code-gui.fixError",
                "title": "Fix Error with Claude",
                "category": "Claude Code"
            }
        ],
        "keybindings": [
            {
                "command": "claude-code-gui.openChat",
                "key": "ctrl+shift+c",
                "mac": "cmd+shift+c"
            },
            {
                "command": "claude-code-gui.newConversation",
                "key": "ctrl+shift+n",
                "mac": "cmd+shift+n",
                "when": "view == claude-code-gui.chatView"
            },
            {
                "command": "claude-code-gui.sendSelection",
                "key": "ctrl+shift+s",
                "mac": "cmd+shift+s",
                "when": "editorHasSelection"
            }
        ],
        "menus": {
            "commandPalette": [
                {
                    "command": "claude-code-gui.openChat"
                },
                {
                    "command": "claude-code-gui.newConversation"
                },
                {
                    "command": "claude-code-gui.clearHistory"
                },
                {
                    "command": "claude-code-gui.exportChat"
                },
                {
                    "command": "claude-code-gui.toggleThinkingMode"
                }
            ],
            "editor/context": [
                {
                    "submenu": "claude-code-gui.submenu",
                    "group": "claude@1",
                    "when": "editorTextFocus"
                }
            ],
            "claude-code-gui.submenu": [
                {
                    "command": "claude-code-gui.sendSelection",
                    "group": "1_actions@1",
                    "when": "editorHasSelection"
                },
                {
                    "command": "claude-code-gui.explainCode",
                    "group": "1_actions@2",
                    "when": "editorHasSelection"
                },
                {
                    "command": "claude-code-gui.refactorCode",
                    "group": "1_actions@3",
                    "when": "editorHasSelection"
                },
                {
                    "command": "claude-code-gui.generateTests",
                    "group": "2_generate@1",
                    "when": "editorHasSelection"
                },
                {
                    "command": "claude-code-gui.fixError",
                    "group": "2_generate@2"
                }
            ],
            "editor/title": [
                {
                    "command": "claude-code-gui.openChat",
                    "group": "navigation@1"
                }
            ],
            "explorer/context": [
                {
                    "command": "claude-code-gui.openChat",
                    "group": "claude@1"
                }
            ],
            "view/title": [
                {
                    "command": "claude-code-gui.newConversation",
                    "when": "view == claude-code-gui.chatView",
                    "group": "navigation@1"
                },
                {
                    "command": "claude-code-gui.clearHistory",
                    "when": "view == claude-code-gui.chatView",
                    "group": "navigation@2"
                },
                {
                    "command": "claude-code-gui.exportChat",
                    "when": "view == claude-code-gui.chatView",
                    "group": "navigation@3"
                }
            ],
            "touchBar": [
                {
                    "command": "claude-code-gui.openChat",
                    "group": "editing"
                }
            ]
        },
        "submenus": [
            {
                "id": "claude-code-gui.submenu",
                "label": "Claude Code"
            }
        ],
        "views": {
            "claude-code-gui": [
                {
                    "id": "claude-code-gui.chatView",
                    "type": "webview",
                    "name": "Chat",
                    "icon": "assets/icons/chat.svg",
                    "contextualTitle": "Claude Code GUI"
                },
                {
                    "id": "claude-code-gui.historyView",
                    "type": "webview",
                    "name": "History",
                    "icon": "$(history)",
                    "contextualTitle": "Chat History",
                    "visibility": "collapsed"
                }
            ]
        },
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "claude-code-gui",
                    "title": "Claude Code GUI",
                    "icon": "assets/icons/sidebar-icon.svg"
                }
            ]
        },
        "configuration": {
            "title": "Claude Code GUI",
            "properties": {
                "claudeCodeGui.claude.executable": {
                    "type": "string",
                    "default": "claude",
                    "description": "Path to the Claude CLI executable"
                },
                "claudeCodeGui.claude.model": {
                    "type": "string",
                    "enum": [
                        "claude-sonnet-4-5-20250929",
                        "claude-opus-4-5-20251101",
                        "claude-haiku-4-5-20251001"
                    ],
                    "enumDescriptions": [
                        "Claude Sonnet 4.5 - Balanced performance (default)",
                        "Claude Opus 4.5 - Most capable model",
                        "Claude Haiku 4.5 - Fast and efficient"
                    ],
                    "default": "claude-sonnet-4-5-20250929",
                    "description": "Default Claude model to use"
                },
                "claudeCodeGui.thinking.enabled": {
                    "type": "boolean",
                    "default": true,
                    "description": "Enable extended thinking mode"
                },
                "claudeCodeGui.thinking.intensity": {
                    "type": "string",
                    "enum": [
                        "think",
                        "think-hard",
                        "think-harder",
                        "ultrathink"
                    ],
                    "default": "think",
                    "description": "Thinking mode intensity level. Higher levels provide more detailed reasoning but consume more tokens."
                },
                "claudeCodeGui.thinking.showProcess": {
                    "type": "boolean",
                    "default": true,
                    "description": "Show the thinking process in the chat"
                },
                "claudeCodeGui.permissions.yoloMode": {
                    "type": "boolean",
                    "default": false,
                    "description": "Enable Yolo Mode to skip permission checks. Use with caution."
                },
                "claudeCodeGui.permissions.autoApprove": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    },
                    "default": [],
                    "description": "List of command patterns to auto-approve"
                },
                "claudeCodeGui.chat.maxHistorySize": {
                    "type": "number",
                    "default": 100,
                    "minimum": 10,
                    "maximum": 1000,
                    "description": "Maximum number of conversations to keep in history"
                },
                "claudeCodeGui.chat.streamResponses": {
                    "type": "boolean",
                    "default": true,
                    "description": "Stream responses as they are generated"
                },
                "claudeCodeGui.chat.showTimestamps": {
                    "type": "boolean",
                    "default": true,
                    "description": "Show timestamps on messages"
                },
                "claudeCodeGui.chat.codeBlockTheme": {
                    "type": "string",
                    "enum": [
                        "auto",
                        "github-dark",
                        "github-light",
                        "monokai",
                        "dracula",
                        "one-dark-pro"
                    ],
                    "default": "auto",
                    "description": "Theme for code blocks in chat"
                },
                "claudeCodeGui.wsl.enabled": {
                    "type": "boolean",
                    "default": false,
                    "description": "Enable WSL integration for running Claude"
                },
                "claudeCodeGui.wsl.distro": {
                    "type": "string",
                    "default": "Ubuntu",
                    "description": "WSL distribution name"
                },
                "claudeCodeGui.wsl.nodePath": {
                    "type": "string",
                    "default": "/usr/bin/node",
                    "description": "Path to Node.js in the WSL distribution"
                },
                "claudeCodeGui.wsl.claudePath": {
                    "type": "string",
                    "default": "/usr/local/bin/claude",
                    "description": "Path to Claude executable in the WSL distribution"
                },
                "claudeCodeGui.ui.fontSize": {
                    "type": "number",
                    "default": 14,
                    "minimum": 10,
                    "maximum": 24,
                    "description": "Font size for chat messages"
                },
                "claudeCodeGui.ui.compactMode": {
                    "type": "boolean",
                    "default": false,
                    "description": "Use compact message layout"
                },
                "claudeCodeGui.ui.showAvatars": {
                    "type": "boolean",
                    "default": true,
                    "description": "Show avatars in chat messages"
                },
                "claudeCodeGui.context.includeFileContext": {
                    "type": "boolean",
                    "default": true,
                    "description": "Include current file context in messages"
                },
                "claudeCodeGui.context.includeWorkspaceInfo": {
                    "type": "boolean",
                    "default": true,
                    "description": "Include workspace information in context"
                },
                "claudeCodeGui.context.maxContextLines": {
                    "type": "number",
                    "default": 500,
                    "minimum": 50,
                    "maximum": 2000,
                    "description": "Maximum lines of context to include"
                },
                "claudeCodeGui.notifications.onComplete": {
                    "type": "boolean",
                    "default": true,
                    "description": "Show notification when Claude finishes processing"
                },
                "claudeCodeGui.notifications.onPermission": {
                    "type": "boolean",
                    "default": true,
                    "description": "Show notification when Claude requires permission"
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run build:extension && npm run build:webview",
        "build": "npm run build:extension && npm run build:webview",
        "build:extension": "esbuild ./src/extension/index.ts --bundle --outfile=dist/extension.js --external:vscode --format=cjs --platform=node --minify",
        "build:webview": "vite build",
        "watch": "concurrently \"bun run watch:extension\" \"bun run watch:webview\"",
        "watch:simple": "bash -c 'bun run watch:extension & bun run watch:webview & wait'",
        "watch:extension": "esbuild ./src/extension/index.ts --bundle --outfile=dist/extension.js --external:vscode --format=cjs --platform=node --watch --sourcemap",
        "watch:webview": "vite build --watch",
        "dev": "bun run watch:simple",
        "compile": "bun run build",
        "lint": "eslint src --ext ts,tsx",
        "lint:fix": "eslint src --ext ts,tsx --fix",
        "format": "prettier --write --ignore-path .gitignore .",
        "typecheck": "tsc --noEmit",
        "test": "vitest run",
        "test:watch": "vitest",
        "test:coverage": "vitest run --coverage",
        "test:e2e": "npx tsc -p src/tests/e2e/tsconfig.json && node out/tests/e2e/runTests.js",
        "package": "vsce package --no-dependencies",
        "publish": "vsce publish --no-dependencies",
        "clean": "rm -rf dist out"
    },
    "devDependencies": {
        "@testing-library/jest-dom": "^6.9.1",
        "@testing-library/react": "^16.3.1",
        "@types/glob": "^8.1.0",
        "@types/mocha": "^10.0.10",
        "@types/node": "^20.17.0",
        "@types/react": "^18.3.12",
        "@types/react-dom": "^18.3.1",
        "@types/vscode": "^1.94.0",
        "@typescript-eslint/eslint-plugin": "^8.31.1",
        "@typescript-eslint/parser": "^8.31.1",
        "@vitejs/plugin-react": "^4.3.4",
        "@vitest/coverage-v8": "^2.1.9",
        "@vscode/test-cli": "^0.0.10",
        "@vscode/test-electron": "^2.5.2",
        "@vscode/vsce": "^3.5.0",
        "autoprefixer": "^10.4.20",
        "concurrently": "^9.1.0",
        "esbuild": "^0.24.0",
        "eslint": "^9.25.1",
        "eslint-plugin-react": "^7.37.2",
        "eslint-plugin-react-hooks": "^5.0.0",
        "glob": "^13.0.0",
        "jsdom": "^27.4.0",
        "mocha": "^11.7.5",
        "postcss": "^8.4.49",
        "prettier": "^3.7.4",
        "tailwindcss": "^3.4.15",
        "typescript": "^5.8.3",
        "vite": "^6.0.3",
        "vitest": "^2.1.8"
    },
    "dependencies": {
        "lucide-react": "^0.468.0",
        "react": "^18.3.1",
        "react-dom": "^18.3.1",
        "react-markdown": "^9.0.1",
        "react-syntax-highlighter": "^15.6.1",
        "remark-gfm": "^4.0.0",
        "zustand": "^5.0.2"
    }
}
