{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "npm: watch",
            "type": "shell",
            "command": "${workspaceFolder}/.vscode/run-npm.sh",
            "args": ["run", "watch"],
            "isBackground": true,
            "problemMatcher": [
                {
                    "pattern": {
                        "regexp": "^.*(ERROR|Error|error).*$",
                        "file": 1,
                        "line": 2,
                        "column": 3,
                        "message": 0
                    },
                    "background": {
                        "activeOnStart": true,
                        "beginsPattern": "\\[watch\\]",
                        "endsPattern": "watching for file changes"
                    }
                }
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            }
        },
        {
            "label": "npm: watch:extension",
            "type": "npm",
            "script": "watch:extension",
            "isBackground": true,
            "problemMatcher": {
                "pattern": {
                    "regexp": "^.*(ERROR|Error|error).*$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "message": 0
                },
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "Build started",
                    "endsPattern": "Build finished|watching"
                }
            },
            "group": "build",
            "presentation": {
                "reveal": "silent",
                "panel": "dedicated"
            }
        },
        {
            "label": "npm: watch:webview",
            "type": "npm",
            "script": "watch:webview",
            "isBackground": true,
            "problemMatcher": {
                "pattern": {
                    "regexp": "^.*(ERROR|Error|error).*$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "message": 0
                },
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "vite",
                    "endsPattern": "built in|watching for file changes"
                }
            },
            "group": "build",
            "presentation": {
                "reveal": "silent",
                "panel": "dedicated"
            }
        },
        {
            "label": "npm: compile",
            "type": "npm",
            "script": "compile",
            "problemMatcher": "$tsc",
            "group": "build"
        },
        {
            "label": "npm: build",
            "type": "npm",
            "script": "build",
            "problemMatcher": "$tsc",
            "group": "build"
        },
        {
            "label": "npm: build:extension",
            "type": "npm",
            "script": "build:extension",
            "problemMatcher": [],
            "group": "build"
        },
        {
            "label": "npm: build:webview",
            "type": "npm",
            "script": "build:webview",
            "problemMatcher": [],
            "group": "build"
        },
        {
            "label": "npm: lint",
            "type": "npm",
            "script": "lint",
            "problemMatcher": ["$eslint-stylish"],
            "group": "test"
        },
        {
            "label": "npm: lint:fix",
            "type": "npm",
            "script": "lint:fix",
            "problemMatcher": ["$eslint-stylish"],
            "group": "test"
        },
        {
            "label": "npm: typecheck",
            "type": "npm",
            "script": "typecheck",
            "problemMatcher": "$tsc",
            "group": "test"
        },
        {
            "label": "npm: test",
            "type": "npm",
            "script": "test",
            "problemMatcher": [],
            "group": "test"
        },
        {
            "label": "npm: test:watch",
            "type": "npm",
            "script": "test:watch",
            "isBackground": true,
            "problemMatcher": [],
            "group": "test"
        },
        {
            "label": "npm: package",
            "type": "npm",
            "script": "package",
            "problemMatcher": [],
            "group": "build"
        },
        {
            "label": "npm: clean",
            "type": "npm",
            "script": "clean",
            "problemMatcher": []
        },
        {
            "label": "Watch All",
            "dependsOn": ["npm: watch:extension", "npm: watch:webview"],
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": false
            }
        },
        {
            "label": "Build All",
            "dependsOn": ["npm: build:extension", "npm: build:webview"],
            "dependsOrder": "sequence",
            "problemMatcher": [],
            "group": "build"
        }
    ]
}
